def Get_User_Input():
    """
    Gets movie title and email from the user and calls Get_Movie_Info.
    """
    while True:
        user_input = input("Enter the title or IMDb ID of a movie (or type 'ğğ±ğ¢ğ­' to quit): ").strip()
        if user_input.lower() == "exit":
            print("Goodbye!")
            break
        
        Get_Movie_Info(user_input)

# Start the program
Get_User_Input()
